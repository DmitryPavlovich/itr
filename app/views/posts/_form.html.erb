<% if @post.errors.any? %>
<div class="alert alert-danger">
  <h5><%= t('common.errors')%></h5>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_for @post do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :body %>
  <%= f.hidden_field :body %>
  <trix-editor input="post_body", class="editor" ></trix-editor>
</div>


<div class="form-group">
  <%= f.submit t('.submit', action: @post.new_record? ? 'Создать' : 'Изменить'), class: 'btn btn-success'%>
  <%= link_to t('common.back'), :back, class: 'btn btn-outline-secondary'%>
</div>
<% end %>
